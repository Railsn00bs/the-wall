<% if current_user %>
  <div>
    You are signed in as <%= current_user.github_username %>
  </div>

  <div>
    <%= link_to 'Create a new project', {:action => :new} %>
  </div>
<% else %>
  <% if Rails.env.production? %>
    <%= link_to "Sign in with Github", user_omniauth_authorize_path(:github) %>
  <% else %>
    <%= link_to "Sign in (dev)", dev_sign_in_path, :method => :post %>
    <%= link_to "Sign in (Second dev)", dev_two_sign_in_path, :method => :post %>
  <% end %>
<% end %>


<% Project.all.each do |project| %>
  <p>
    <%= project.name %>
  </p>

  <p>
    <%= project.description %>
  </p>

  <p>
    <%= project.contact %>
  </p>

  <% if current_user == project.user %>
    <%= link_to 'Edit', edit_project_path(project) %>
  <% end %>

  <%= link_to 'Project homepage', project.url %>
<% end %>
